<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CAHMS Assessment Tool</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .file-upload-container {
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
            padding: 1rem;
            margin-bottom: 1rem;
            background-color: #f8f9fa;
        }
        .file-upload-container h5 {
            color: #495057;
            margin-bottom: 0.5rem;
        }
        .file-upload-container .description {
            font-size: 0.875rem;
            color: #6c757d;
            margin-bottom: 1rem;
        }
        .upload-status {
            margin: 1rem 0;
        }
        .upload-status .status-item {
            display: inline-block;
            margin: 0.25rem;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.875rem;
        }
        .status-uploaded {
            background-color: #d1edff;
            color: #0c63e4;
        }
        .status-missing {
            background-color: #f8d7da;
            color: #721c24;
        }
        .status-optional {
            background-color: #e2e3e5;
            color: #383d41;
        }
        .report-container {
            max-height: 600px;
            overflow-y: auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9;
            font-family: 'Arial', sans-serif;
            line-height: 1.6;
            white-space: pre-wrap;
        }
        .metadata-container {
            font-size: 0.8em;
            line-height: 1.2;
        }
        .metadata-container .metric-label {
            font-weight: bold;
            color: #666;
            margin-bottom: 2px;
        }
        .metadata-container .metric-value {
            font-size: 1.1em;
            color: #333;
            margin-bottom: 8px;
        }
        .logo-title-section {
            padding: 1rem 0;
            border-bottom: 1px solid #dee2e6;
            margin-bottom: 2rem;
        }
        .generate-button-container {
            text-align: center;
            margin: 2rem 0;
        }
        .generate-button-container button:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
        .status-uploaded {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        .status-missing {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
        .status-optional {
            background-color: #e2e3e5;
            color: #383d41;
            border: 1px solid #d1d3d4;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
