# Azure OpenAI Configuration
# Get these values from your Azure OpenAI resource in the Azure portal
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_MAX_TOKENS=4000
AZURE_OPENAI_TEMPERATURE=0.7
AZURE_OPENAI_MAX_RETRIES=3
AZURE_OPENAI_TIMEOUT_SECONDS=120

# File Upload Configuration
FILE_UPLOAD_MAX_FILE_SIZE=10485760
FILE_UPLOAD_MAX_TOTAL_SIZE=52428800
FILE_UPLOAD_ALLOWED_EXTENSIONS=.pdf,.docx,.txt
FILE_UPLOAD_PATH=uploads

# Mandatory Upload Configuration
# Set to true to require specific forms during upload
MANDATORY_FORM_H=false
MANDATORY_FORM_S=false
MANDATORY_FORM_A=false
MANDATORY_CAHMS_INITIAL=false
MANDATORY_NEURO_DEV_HISTORY=false
MANDATORY_FORMULATION_DOCUMENT=false
MANDATORY_SCHOOL_OBSERVATION=false
MANDATORY_SUPPORTING_INFORMATION=false

# Assessment Configuration
# Paths to prompt template and system message files (relative to workspace root)
ASSESSMENT_PROMPT_TEMPLATE_PATH=prompts/assessment_prompt_template.txt
ASSESSMENT_SYSTEM_MESSAGE_PATH=prompts/system_message.txt
ASSESSMENT_ENABLE_DETAILED_LOGGING=false
ASSESSMENT_MAX_DOCUMENTS=10

# Application Configuration
APPLICATION_NAME=CAHMS Assessment Tool
APPLICATION_VERSION=1.0.0
APPLICATION_ENABLE_DEMO_MODE=false
APPLICATION_CACHE_TIMEOUT_MINUTES=30

# ASP.NET Core Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://localhost:5000
