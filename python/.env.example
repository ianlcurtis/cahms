# CAHMS Application Configuration
# Environment variables for the Neurodevelopmental Assessment application
# Copy this file to .env and fill in your actual values

# Application Title
TITLE=CAHMS Neurodevelopmental Reporting Tool

# Logo Configuration
LOGO_URL=images/azure_logo.png

# LLM Configuration
LLM_ENDPOINT=https://your-ai-service.cognitiveservices.azure.com/
LLM_API_KEY=your_llm_api_key_here
LLM_MODEL_NAME=gpt-4o
USE_OPENAI_CLIENT=true

# Azure Authentication (required for AI Foundry)
AZURE_CLIENT_ID=your_azure_client_id_here
AZURE_TENANT_ID=your_azure_tenant_id_here

# AI Foundry Project Configuration - project endpoint
PROJECT_ENDPOINT=https://your-ai-service.services.ai.azure.com/api/projects/your-project-name

# AI Foundry Project Details (required for evaluation logging)
# Note: Replace these values with your actual Azure subscription and resource group
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id_here
AZURE_RESOURCE_GROUP=your_resource_group_name
AI_PROJECT_NAME=your_ai_project_name

# Mandatory Upload Configuration
# Set to true to make each upload field required, false to make it optional
MANDATORY_FORM_S=true
MANDATORY_FORM_H=false
MANDATORY_FORM_A=false
MANDATORY_CAHMS_INITIAL=false
MANDATORY_NEURO_DEV_HISTORY=false
MANDATORY_FORMULATION_DOCUMENT=false
MANDATORY_SCHOOL_OBSERVATION=false
MANDATORY_SUPPORTING_INFO=false
